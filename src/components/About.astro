<section
  class="sobre-nosotros-section relative py-20 px-4 md:px-8 lg:px-16 overflow-hidden"
  id="sobre-nosotros"
>
  <!-- Gradiente de fondo sutil -->
  <div
    class="absolute inset-0 z-0 pointer-events-none"
    style="background: radial-gradient(ellipse 70% 50% at 30% 20%, rgba(184, 86, 233, 0.15), transparent 60%), radial-gradient(ellipse 60% 40% at 80% 80%, rgba(251, 236, 81, 0.12), transparent 70%), linear-gradient(180deg, var(--background) 0%, rgba(247, 234, 255, 0.8) 100%);"
  >
  </div>

  <!-- Burbujas decorativas adicionales -->
  <div class="absolute inset-0 z-5 pointer-events-none overflow-hidden">
    <div
      class="animate-float-slow absolute top-10 left-10 w-2 h-2 bg-[var(--primary)] rounded-full opacity-30"
    >
    </div>
    <div
      class="animate-float-medium absolute top-20 right-12 w-3 h-3 bg-[var(--accent)] rounded-full opacity-25"
    >
    </div>
    <div
      class="animate-float-fast absolute bottom-16 left-1/5 w-2.5 h-2.5 bg-pink-300 rounded-full opacity-20"
    >
    </div>
    <div
      class="animate-pulse-subtle absolute bottom-32 right-1/4 w-4 h-4 border border-[var(--primary)] rounded-full opacity-15"
    >
    </div>
    <div
      class="animate-float-slow absolute top-1/3 left-1/3 w-1.5 h-1.5 bg-[var(--secondary)] rounded-full opacity-35"
    >
    </div>
    <div
      class="animate-float-medium absolute bottom-10 right-1/3 w-2 h-2 bg-[var(--accent)] rounded-full opacity-30"
    >
    </div>
    <div
      class="animate-float-fast absolute top-40 left-3/4 w-3 h-3 bg-pink-200 rounded-full opacity-25"
    >
    </div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto">
    <!-- Título principal -->
    <div class="text-center mb-16">
      <h2
        class="sobre-nosotros-title opacity-0 text-4xl md:text-5xl lg:text-6xl text-[var(--foreground)] font-serif mb-4"
        style="font-family: 'Playfair Display', serif;"
      >
        Sobre
      </h2>
      <span
        class="sobre-nosotros-subtitle opacity-0 block text-4xl md:text-5xl lg:text-6xl font-serif bg-gradient-to-r from-[var(--primary)] to-[var(--accent)] bg-clip-text text-transparent"
        style="font-family: 'Playfair Display', serif;"
      >
        Nuestra Dulce Historia
      </span>
    </div>

    <!-- Línea de tiempo -->
    <div class="relative max-w-3xl mx-auto">
      <!-- Línea central -->
      <div
        class="absolute left-1/2 -translate-x-1/2 w-1 bg-[var(--primary)]/20 h-full"
      >
      </div>

      <!-- Hito 1: Nuestro Origen -->
      <div
        class="sobre-nosotros-milestone opacity-0 relative flex items-center mb-12 group"
      >
        <div class="w-1/2 pr-8 text-right">
          <h3
            class="text-xl md:text-2xl font-bold mb-2 text-[var(--cardForeground)] group-hover:text-[var(--primary)] transition-colors duration-300"
            style="font-family: 'Poppins', sans-serif;"
          >
            Nuestro Origen (2025)
          </h3>
          <p
            class="text-[var(--mutedForeground)] leading-relaxed"
            style="font-family: 'Open Sans', sans-serif;"
          >
            Salty & Sweety nació para lograr nuestra meta: transformar momentos
            en magia con postres artesanales llenos de amor.
          </p>
        </div>
        <div
          class="w-12 h-12 rounded-full bg-gradient-to-br from-[var(--primary)] to-pink-400 flex items-center justify-center absolute left-1/2 -translate-x-1/2 z-10 shadow-[var(--shadow-md)] group-hover:scale-110 transition-transform duration-300"
        >
          <svg
            class="w-6 h-6 text-white"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M12 2C9.24 2 7 4.24 7 7v1H5v6h2v7h10v-7h2V8h-2V7c0-2.76-2.24-5-5-5zm0 2c1.65 0 3 1.35 3 3v1H9V7c0-1.65 1.35-3 3-3zm-5 6h10v2H7v-2z"
            ></path>
          </svg>
        </div>
        <div class="w-1/2 pl-8"></div>
      </div>

      <!-- Hito 2: Nuestra Pasión -->
      <div
        class="sobre-nosotros-milestone opacity-0 relative flex items-center mb-12 group"
      >
        <div class="w-1/2 pr-8"></div>
        <div
          class="w-12 h-12 rounded-full bg-gradient-to-br from-[var(--accent)] to-yellow-400 flex items-center justify-center absolute left-1/2 -translate-x-1/2 z-10 shadow-[var(--shadow-md)] group-hover:scale-110 transition-transform duration-300"
        >
          <svg
            class="w-6 h-6 text-[var(--accentForeground)]"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"
            ></path>
          </svg>
        </div>
        <div class="w-1/2 pl-8 text-left">
          <h3
            class="text-xl md:text-2xl font-bold mb-2 text-[var(--cardForeground)] group-hover:text-[var(--primary)] transition-colors duration-300"
            style="font-family: 'Poppins', sans-serif;"
          >
            Nuestra Pasión
          </h3>
          <p
            class="text-[var(--mutedForeground)] leading-relaxed"
            style="font-family: 'Open Sans', sans-serif;"
          >
            Cada bocado refleja nuestra dedicación a la artesanía, combinando
            tradición y creatividad.
          </p>
        </div>
      </div>

      <!-- Hito 3: Nuestro Futuro -->
      <div
        class="sobre-nosotros-milestone opacity-0 relative flex items-center mb-12 group"
      >
        <div class="w-1/2 pr-8 text-right">
          <h3
            class="text-xl md:text-2xl font-bold mb-2 text-[var(--cardForeground)] group-hover:text-[var(--primary)] transition-colors duration-300"
            style="font-family: 'Poppins', sans-serif;"
          >
            Nuestro Futuro
          </h3>
          <p
            class="text-[var(--mutedForeground)] leading-relaxed"
            style="font-family: 'Open Sans', sans-serif;"
          >
            Seguimos innovando para endulzar tus momentos más especiales con
            nuevos sabores.
          </p>
        </div>
        <div
          class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-400 to-[var(--primary)] flex items-center justify-center absolute left-1/2 -translate-x-1/2 z-10 shadow-[var(--shadow-md)] group-hover:scale-110 transition-transform duration-300"
        >
          <svg
            class="w-6 h-6 text-white"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M9,11L12,2L15,11L24,12L15,13L12,22L9,13L0,12L9,11M19,15L22,14L21.5,12.5L22,11L19,12L18,9L16.5,9.5L16,12L18,15L19,15Z"
            ></path>
          </svg>
        </div>
        <div class="w-1/2 pl-8"></div>
      </div>
    </div>

    <!-- Call-to-action button -->
    <div class="mt-12 text-center">
      <a
        href="https://wa.me/2215874344?text=Holaaaa%2C%20me%20puedes%20dar%20informaci%C3%B3n%20del%20cat%C3%A1logo%20de%20sus%20postres%20por%20favor%3F%20c%3A"
        class="sobre-nosotros-button opacity-0 px-8 sm:px-10 py-3 sm:py-4 rounded-[var(--radius-md)] bg-[var(--primary)] text-[var(--primary-foreground)] hover:bg-[var(--accent)] hover:text-[var(--accent-foreground)] transition-all duration-300 shadow-[var(--shadow-md)] hover:shadow-[var(--shadow-lg)] transform hover:scale-105 relative overflow-hidden group"
        style="font-family: 'Poppins', sans-serif;"
        target="_blank"
        rel="noopener noreferrer"
      >
        Descubre Nuestra Magia
        <span
          class="absolute inset-0 bg-white/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
        ></span>
      </a>
    </div>
  </div>
</section>

<style>
  /* Animaciones */
  @keyframes sobreNosotrosTitle {
    from {
      opacity: 0;
      transform: translateY(50px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes sobreNosotrosSubtitle {
    from {
      opacity: 0;
      transform: translateY(30px) scale(0.9);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  @keyframes sobreNosotrosMilestoneIn {
    from {
      opacity: 0;
      transform: translateY(30px) scale(0.9);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  @keyframes sobreNosotrosButtonIn {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes floatSlow {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  @keyframes floatMedium {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-15px);
    }
  }

  @keyframes floatFast {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-25px);
    }
  }

  @keyframes pulseSubtle {
    0%,
    100% {
      transform: scale(1);
      opacity: 0.15;
    }
    50% {
      transform: scale(1.2);
      opacity: 0.25;
    }
  }

  /* Estados activos */
  .sobre-nosotros-title.animate-in {
    animation: sobreNosotrosTitle 1s ease-out forwards;
  }

  .sobre-nosotros-subtitle.animate-in {
    animation: sobreNosotrosSubtitle 1s ease-out 0.3s forwards;
  }

  .sobre-nosotros-milestone.animate-in {
    animation: sobreNosotrosMilestoneIn 0.6s ease-out forwards;
  }

  .sobre-nosotros-button.animate-in {
    animation: sobreNosotrosButtonIn 0.6s ease-out 0.7s forwards;
  }

  /* Delays escalonados para los hitos */
  .sobre-nosotros-milestone:nth-child(1).animate-in {
    animation-delay: 0.1s;
  }
  .sobre-nosotros-milestone:nth-child(2).animate-in {
    animation-delay: 0.25s;
  }
  .sobre-nosotros-milestone:nth-child(3).animate-in {
    animation-delay: 0.4s;
  }

  /* Animaciones flotantes */
  .animate-float-slow {
    animation: floatSlow 7s ease-in-out infinite;
  }

  .animate-float-medium {
    animation: floatMedium 5s ease-in-out infinite;
  }

  .animate-float-fast {
    animation: floatFast 6s ease-in-out infinite;
  }

  .animate-pulse-subtle {
    animation: pulseSubtle 4s ease-in-out infinite;
  }

  /* Estilos de hitos */
  .sobre-nosotros-milestone {
    transition: all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .sobre-nosotros-milestone:hover {
    transform: translateY(-8px) scale(1.02);
  }

  .sobre-nosotros-milestone:hover .w-12 {
    box-shadow: 0 0 30px rgba(191, 90, 242, 0.4);
    animation: iconPulse 2s ease-in-out infinite;
  }

  @keyframes iconPulse {
    0%,
    100% {
      transform: scale(1.1);
    }
    50% {
      transform: scale(1.15);
    }
  }
</style>

<script>
  // Intersection Observer para animaciones
  const observerOptions = {
    threshold: 0.15,
    rootMargin: "0px 0px -100px 0px",
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add("animate-in");
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  // Observar elementos
  const animateElements = document.querySelectorAll(
    ".sobre-nosotros-title, .sobre-nosotros-subtitle, .sobre-nosotros-milestone, .sobre-nosotros-button"
  );

  animateElements.forEach((el) => {
    observer.observe(el);
  });

  // Efecto de movimiento 3D para los hitos
  const milestones = document.querySelectorAll(".sobre-nosotros-milestone");

  milestones.forEach((milestone) => {
    milestone.addEventListener("mousemove", (e) => {
      const rect = milestone.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;

      const centerX = rect.width / 2;
      const centerY = rect.height / 2;

      const rotateX = (y - centerY) / 20;
      const rotateY = (centerX - x) / 20;

      milestone.style.transform = `
        perspective(1000px)
        rotateX(${rotateX}deg)
        rotateY(${rotateY}deg)
        translateZ(10px)
        scale(1.02)
      `;
    });

    milestone.addEventListener("mouseleave", () => {
      milestone.style.transform =
        "perspective(1000px) rotateX(0) rotateY(0) translateZ(0) scale(1)";
    });
  });

  // Limpiar al salir de la página
  window.addEventListener("beforeunload", () => {
    observer.disconnect();
  });
</script>
