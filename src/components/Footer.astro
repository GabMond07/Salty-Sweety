<style>
  /* ========== ANIMACIONES PARA FOOTER ========== */

  /* Animaci칩n de entrada para secciones del footer */
  @keyframes footerFadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Estados activos cuando son visibles */
  .footer-brand.animate-in {
    animation: footerFadeInUp 0.8s ease-out forwards;
  }

  .footer-links.animate-in {
    animation: footerFadeInUp 0.8s ease-out 0.2s forwards;
  }

  .footer-contact.animate-in {
    animation: footerFadeInUp 0.8s ease-out 0.4s forwards;
  }

  .footer-bottom.animate-in {
    animation: footerFadeInUp 0.8s ease-out 0.6s forwards;
  }

  /* Efectos hover mejorados */
  .social-link {
    backdrop-filter: blur(10px);
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .social-link:hover {
    box-shadow: 0 8px 25px rgba(255, 255, 255, 0.2);
    transform: translateY(-2px) scale(1.1);
  }

  .footer-link {
    position: relative;
    overflow: hidden;
  }

  .footer-link::before {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--accent), white);
    transition: width 0.3s ease;
  }

  .footer-link:hover::before {
    width: 100%;
  }

  /* Gradiente de fondo mejorado */
  .footer-section {
    background: linear-gradient(
      135deg,
      var(--primary) 0%,
      #8b5cf6 25%,
      #a855f7 50%,
      #ec4899 75%,
      #f97316 100%
    );
    background-size: 400% 400%;
    animation: gradientShift 15s ease infinite;
  }

  @keyframes gradientShift {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  /* Transiciones suaves */
  .footer-brand,
  .footer-links,
  .footer-contact,
  .footer-bottom {
    transition: all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
</style>

<script>
  // Intersection Observer para triggear animaciones del footer
  const observerOptions = {
    threshold: 0.1,
    rootMargin: "0px 0px -50px 0px",
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add("animate-in");

        // Una vez animado, dejar de observar
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  // Observar elementos del footer que necesitan animaci칩n
  const footerElements = document.querySelectorAll(
    ".footer-brand, .footer-links, .footer-contact, .footer-bottom"
  );

  footerElements.forEach((el) => {
    observer.observe(el);
  });

  // Efecto de parallax sutil para elementos decorativos
  let ticking = false;

  function updateFooterParallax() {
    const footer = document.querySelector(".footer-section");
    const scrollY = window.pageYOffset;
    const windowHeight = window.innerHeight;
    const footerRect = footer?.getBoundingClientRect();

    if (footerRect && footerRect.top < windowHeight && footerRect.bottom > 0) {
      const floatingElements = footer.querySelectorAll(
        '[class*="animate-float"]'
      );

      floatingElements.forEach((el, index) => {
        const speed = 0.02 + index * 0.005;
        const yPos = scrollY * speed;
        el.style.transform += ` translateY(${yPos}px)`;
      });
    }

    ticking = false;
  }

  function requestFooterTick() {
    if (!ticking) {
      requestAnimationFrame(updateFooterParallax);
      ticking = true;
    }
  }

  // Throttled scroll listener
  window.addEventListener("scroll", requestFooterTick, { passive: true });

  // Scroll suave para enlaces internos
  document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
    anchor.addEventListener("click", function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute("href"));
      if (target) {
        target.scrollIntoView({
          behavior: "smooth",
          block: "start",
        });
      }
    });
  });

  // Limpiar al salir de la p치gina
  window.addEventListener("beforeunload", () => {
    window.removeEventListener("scroll", requestFooterTick);
    observer.disconnect();
  });
</script>
