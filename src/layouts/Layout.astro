---
import "../styles/global.css";
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Salty & Sweety - Postres artesanales hechos con amor."
    />
    <meta name="keywords" content="postres, pasteles, dulces, artesanal" />
    <title>{title}</title>
    <link
      rel="preload"
      href="/strawberry_pound_cake.glb"
      as="fetch"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/cake_with_cherry.glb"
      as="fetch"
      crossorigin="anonymous"
      media="(min-width: 768px)"
    />
  </head>
  <body>
    <slot />
  </body>
</html>
